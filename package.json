{
  "scripts": {
    "build": "npm-run-all clean transpile typecheck",
    "clean": "rm -r lib",
    "transpile": "babel src --extensions '.ts' --out-dir lib",
    "watch-transpile": "babel src --out-dir lib --watch",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "babel-cli": "next",
    "babel-preset-react": "next",
    "babel-preset-typescript": "next",
    "npm-run-all": "^4.0.2",
    "typescript": "next"
  }
}
